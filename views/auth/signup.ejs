<h2>Sign Up</h2>
	<form method="post" action="/auth/signup" class="pure-u-1-4" class="pure-form pure-form-aligned">
		<fieldset>
			<input type="text" name="firstname" placeholder="first name">
			<input type="text" name="lastname" placeholder="last name">
			<input type="text" name="username" placeholder="username">
			<input type="email" name="email" placeholder="email">
			<input type="password" name="password" placeholder="password">
			<input type="password" name="passwordVerify" placeholder="verify password">
			<button type="submit" id="loginbutton" class="pure-button pure-button-primary">Sign Up</button>
		</fieldset>
	</form>
